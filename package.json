		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.25.0",
		"wxt": "^0.19.27"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"tsc --noEmit",
