		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@eslint/js": "^9.21.0",
		"@tailwindcss/container-queries": "^0.1.1",
