{
    "manifest_version": 3,
    "name": "Pixiv Infinite Scroll",
    "version": "1.4.4",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "icons": {
        "32": "icons/pis32.png",
        "48": "icons/pis48.png",
        "96": "icons/pis96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.pixiv.net/*"
            ],
            "js": [
                "script/main.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "32": "icons/pis32.png",
            "48": "icons/pis48.png",
            "96": "icons/pis96.png"
        },
        "default_popup": "script/popup.html"
    },
    "permissions": [
        "storage"
    ]
}